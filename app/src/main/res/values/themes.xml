<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MoMi" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- App bar and other top-level elements -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Components progress bars, switches, and checkboxes. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_400</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Customize your theme here. -->
        <!--<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->

        <!-- Android system status bar. -->
        <!--<item name="colorSurface">@color/black</item>-->
        <item name="colorOnSurface">#000000</item>

        <!-- Android system navigation bar. -->
        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/white</item>

        <!-- Text on top of the background color -->
        <item name="colorPrimarySurface">@color/blue_500</item>
        <item name="colorOnPrimarySurface">@color/white</item>

        <item name="colorOnBackground">@color/white</item>

        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>

        <!-- Radio buttons -->
        <item name="radioButtonStyle">@style/Widget.AppCompat.CompoundButton.RadioButton</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>

    </style>

    <style name="Theme.MoMi" parent="Base.Theme.MoMi" />

</resources>